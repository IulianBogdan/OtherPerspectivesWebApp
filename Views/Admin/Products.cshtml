@using System.Collections;
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Products</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
		    <th>Title</th>
                    <th>UserId</th>
                    <th>Price</th>
                    <th>CategoryId</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<OtherPerspectivesWebApp.Models.Product> products = Model;
                    foreach (var product in products)
                    {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Title</td>
                    <td>@product.UserId</td>
                    <td>@product.Price</td>
                    <td>@product.CategoryId</td>
                    <td><a asp-action="EditProduct" asp-route-id="@product.Id">edit</a></td>
                    <td><a asp-action="DeleteProduct" asp-route-id="@product.Id">delete</a></td>
                </tr>
                    }
                }
            </tbody>
        </table>
        <!-- /. ROW  -->
    </div>
    <!-- /. PAGE INNER  -->
</div>
