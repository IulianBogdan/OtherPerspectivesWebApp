@using System.Collections;
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Categories</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <form method="POST" asp-action="AddCategory">
            <div>
                Name: <input name="name" />
                <input type="submit" value="Add category" />
            </div>
        </form>
        <hr />
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Category Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<OtherPerspectivesWebApp.Models.Category> categories = Model;
                    foreach (var category in categories)
                    {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td><a asp-action="EditCategory" asp-route-id="@category.Id">edit</a></td>
                    <td><a asp-action="DeleteCategory" asp-route-id="@category.Id">delete</a></td>
                </tr>
                    }
                }
            </tbody>
        </table>
        <!-- /. ROW  -->
    </div>
    <!-- /. PAGE INNER  -->
</div>
