@using System.Collections;
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Orders</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ProductId</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>UserId</th>
                    <th>Address</th>
                    <th>Comment</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<OtherPerspectivesWebApp.Models.Order> orders = Model;
                    foreach (var order in orders)
                    {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.ProductId</td>
                    <td>@order.Quantity</td>
                    <td>@order.Price</td>
                    <td>@order.UserId</td>
                    <td>@order.Address</td>
                    <td>@order.Comment</td>
                    <td><a asp-action="EditOrder" asp-route-id="@order.Id">edit</a></td>
                    <td><a asp-action="DeleteOrder" asp-route-id="@order.Id">delete</a></td>
                </tr>
                    }
                }
            </tbody>
        </table>
        <!-- /. ROW  -->
    </div>
    <!-- /. PAGE INNER  -->
</div>
