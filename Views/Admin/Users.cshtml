@using System.Collections;
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h2>Users</h2>
            </div>
        </div>
        <!-- /. ROW  -->
        <hr />
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    List<OtherPerspectivesWebApp.Models.User> users = Model;
                    foreach (var user in users)
                    {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td><a asp-action="DeleteUser" asp-route-id="@user.Id">delete</a></td>
                </tr>
                    }
                }
            </tbody>
        </table>
        <!-- /. ROW  -->
    </div>
    <!-- /. PAGE INNER  -->
</div>
